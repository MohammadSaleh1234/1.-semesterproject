        <TextBlock Text="Beach Room"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="48"
                   Grid.Row="0"/>
        
       
        <Button x:Name="GoQuizButton"
                Content="Go to the Quiz"
                HorizontalAlignment="Center"
                Margin="0,20"
                Grid.Row="1"/>
    </Grid>
</UserControl>
