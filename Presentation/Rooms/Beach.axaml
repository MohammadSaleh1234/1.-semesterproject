<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia.Rooms.Beach">
    <Grid RowDefinitions="*,Auto, Auto, Auto">
       

        <TextBlock Text="Beach Room"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="48"
                   Grid.Row="0"/>

        <TextBlock x:Name="OutputTextInventory"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               FontSize="24"
               Grid.Row="0"/>
               

        <TextBlock x:Name="OutputTextFact"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="48"
                Grid.Row="1"/>
        
               <Button x:Name="Plastic1Button"
                Background="Transparent"
				Height="200"
				Width="200"
                HorizontalAlignment="Center"
                Margin="150,20"
                Grid.Row="2">

				<Image Source="avares://Presentation/Assets/Rooms/net.png"
                Stretch="UniformToFill"/>
				 </Button>
                
                <Button x:Name="Plastic2Button"
                Content="Plastic2"
                HorizontalAlignment="Left"
                Margin="150,20"
                Grid.Row="2"/>
                
                <Button x:Name="Plastic3Button"
                Content="Plastic3"
                HorizontalAlignment="Right"
                Margin="150,20"
                Grid.Row="2"/>
            
                <Button x:Name="Plastic4Button"
                Content="Plastic4"
                Margin="10,30"
                Grid.Row="1"/>
                   
                <Button x:Name="Plastic5Button"
                Content="Plastic5"
                HorizontalAlignment="Right"
                Margin="250,30"
                Grid.Row="3"/>
        
       
        <Button x:Name="GoQuizButton"
                Content="Go to the Quiz"
                HorizontalAlignment="Center"
                Margin="0,20"
                Grid.Row="1"/>
        
        <Button x:Name="ToolButton"
                Content="Take Trashbag"
                HorizontalAlignment="Left"
                Margin="0,20"
                Grid.Row="0"/>
    </Grid>
</UserControl>
