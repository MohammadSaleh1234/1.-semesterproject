<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia.Rooms.Entry">
             
    <Grid RowDefinitions="*,Auto">
        <!-- Background image fills the first row -->
        <Image Source="avares://Presentation/Assets/Rooms/TheOceanCode.jpeg"
               Grid.Row="0"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Stretch="UniformToFill"/>

        <!-- Button stays at the bottom row -->
        <Button x:Name="GoBeachButton"
                Content="Go to the Beach"
                HorizontalAlignment="Center"
                Grid.Row="0"
                Margin="0,700,0,0"/>
    </Grid>
</UserControl>
