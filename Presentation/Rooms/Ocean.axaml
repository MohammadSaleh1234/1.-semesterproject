<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia.Rooms.Ocean">
    <Grid RowDefinitions="*,Auto, Auto, Auto">
        
        <TextBlock x:Name="room"
                   Text="Ocean Room"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="22"
                   Grid.Row="0"/>

        <TextBlock x:Name="OutputTextFact"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="22"
                   Grid.Row="0"/>
        

        <TextBlock x:Name="OutputTextInventory"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               FontSize="24"/>

                <Button x:Name="Net1Button"
                        Width="200"
                        Height="200"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Center"
                        Margin="150,20"
                        Grid.Row="2">

                    	<Image Source="avares://Presentation/Assets/Rooms/net.png"
                    	 Stretch="UniformToFill" />
                </Button>

                
                <Button x:Name="Net2Button"
                		 Width="200"
                        Height="200"
                		Content="Net2"
                		HorizontalAlignment="Left"
                		Margin="150,20"
                		Background="Transparent"
                		BorderBrush="Transparent"
                		Grid.Row="2">
                		
                		<Image Source="avares://Presentation/Assets/Rooms/net.png"
                    	Stretch="UniformToFill" />
                </Button>

                
                <Button x:Name="Net3Button"
                		Width="200"
                		Height="200"
                		Background="Transparent"
                		BorderBrush="Transparent"
                		HorizontalAlignment="Right"
                		Margin="150,20"
                		Grid.Row="2">

 						<Image Source="avares://Presentation/Assets/Rooms/net.png"
                     	Stretch="UniformToFill" />
                </Button>
            
                <Button x:Name="Net4Button"
                 		Width="200"
                        Height="200"
                		Background="Transparent"
                		BorderBrush="Transparent"
                		Margin="10,30"
                		Grid.Row="0">

 						<Image Source="avares://Presentation/Assets/Rooms/net.png"
                     	Stretch="UniformToFill" />
                </Button>
                   
                <Button x:Name="Net5Button"
 						Width="200"
                        Height="200"
                		HorizontalAlignment="Right"
               			Margin="250,30"
                		Background="Transparent"
                		BorderBrush="Transparent"
                		Grid.Row="3">

 						<Image Source="avares://Presentation/Assets/Rooms/net.png"
                     	Stretch="UniformToFill" />
                </Button>


        <Button x:Name="BoatButton"
                Content="Activate sirens"
                HorizontalAlignment="Center"
                Grid.Row="2"/>
        
        <Button x:Name="GoQuizButton"
                Content="Go to the Quiz"
                HorizontalAlignment="Center"
                Margin="0,20"
                Grid.Row="3"/>
    </Grid>
</UserControl>
