<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Avalonia.Rooms.CoralQuiz">

    <Grid>

        <!-- ðŸŒŠ Baggrund -->
        <Image Source="avares://Presentation/Assets/Rooms/Copilot_20251208_101608.png"
               Stretch="UniformToFill"
               />

        <StackPanel Margin="100" Spacing="25">

            <!-- ðŸŸ Quiz-figuren med talebobbel -->
            <Grid Height="330">

                <!-- TEKST I TALEBOBBEL -->
                <TextBlock x:Name="QuestionText"
                           Text="Loading question..."
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="Black"
                           TextWrapping="Wrap"
                           MaxWidth="600"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- ðŸ”¹ Svar knapper -->
            <StackPanel Spacing="15" HorizontalAlignment="Center" Margin="0,10,0,0">

                <Button x:Name="AnswerAButton"
                        FontSize="24"
                        Width="450"
                        Background="#004080"
                        Foreground="White"/>

                <Button x:Name="AnswerBButton"
                        FontSize="24"
                        Width="450"
                        Background="#004080"
                        Foreground="White"/>

                <Button x:Name="AnswerCButton"
                        FontSize="24"
                        Width="450"
                        Background="#004080"
                        Foreground="White"/>
            </StackPanel>

            <!-- ðŸ Vises nÃ¥r quiz er gennemfÃ¸rt -->
            <Button x:Name="NextButton"
                    Content="Continue"
                    Width="260"
                    FontSize="26"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    Background="#004080"
                    IsVisible="False"
                    Click="OnNextClick"/>

        </StackPanel>


        <!-- â­ EXTRA GRID BAGERST I LAYOUTET -->
        <Grid RowDefinitions="*,Auto">


           
        </Grid>

    </Grid>

</UserControl>
